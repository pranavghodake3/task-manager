<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap 3 CRUD Pages</title>
    <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container">
    <% if (successMessage) { %>
        <div style="color: green;"><%= successMessage %></div>
    <% } %>
    <a href="/books/create" class="btn btn-primary">Add</a>
    <!-- List Page -->
    <h2 class="text-center">List of Items</h2>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% for (let i = 0; i < books.length; i++) { %>
            <tr>
                <td><%= books[i].id %></td>
                <td><%= books[i].name %></td>
                <td>
                    <a href="/books/<%= books[i].id %>" class="btn btn-info btn-xs">View</a>
                    <a href="/books/<%= books[i].id %>/edit" class="btn btn-warning btn-xs">Edit</a>
                    <a href="#" class="btn btn-danger btn-xs">Delete</a>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>

<script src="/node_modules/jquery/dist/jquery.min.js"></script>
<script src="/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
